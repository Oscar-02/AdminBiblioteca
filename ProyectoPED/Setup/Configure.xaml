<Page
    x:Class="ProyectoPED.Setup.Configure"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoPED.Setup"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI" 
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Light">

    <Grid>
        <TextBlock FontWeight="SemiBold" FontSize="32" 
                   Text="Configurando aplicacion. No cierre la aplicacion." 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15"/>
        <Image Source="/Resources/Logo/logo.png" Stretch="Uniform" MinWidth="173" MaxWidth="692"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15">
            <muxc:ProgressRing x:Name="pRing" IsIndeterminate="False" Value="50" Margin="0,0,10,0"/>
            <TextBlock x:Name="pText" Text="ProcessName" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
