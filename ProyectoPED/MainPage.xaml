<Page
    x:Class="ProyectoPED.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoPED"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Frame x:Name="mainF" x:FieldModifier="public"/>
        <muxc:InfoBar x:Name="infoBar" x:FieldModifier="public"
                      IsOpen="False" Severity="Informational" 
                      HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10"/>
    </Grid>
</Page>
